{
  "name": "cafeteria-manager",
  "private": true,
  "version": "0.0.0",
  "description": "A modern cafeteria manager software compatible with Glome.",
  "author": "Dotshell <tristan.gscn@proton.me>",
  "type": "module",
  "scripts": {
    "build:main": "tsc --project electron/tsconfig.main.json",
    "build:renderer": "vite build --mode production",
    "build:ci": "npm run build:renderer && npm run build:main",
    "dist": "npm run build:ci && npm run build:electron",
    "build:electron": "node build-electron.cjs",
    "build": "npm run build:renderer && npm run build:electron",
    "build:linux": "npm run build:renderer && electron-builder --linux",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "dev": "vite",
    "rebuild": "@electron/rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.19.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@heroicons/react": "^2.2.0",
    "@mui/x-charts": "^7.27.0",
    "axios": "^1.8.4",
    "better-sqlite3": "^11.8.1",
    "dayjs": "^1.11.13",
    "framer-motion": "^11.17.0",
    "i18next": "^24.2.1",
    "i18next-browser-languagedetector": "^8.0.3",
    "i18next-electron-fs-backend": "^3.0.3",
    "i18next-http-backend": "^3.0.1",
    "mongodb": "^6.13.0",
    "multer": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.4.0",
    "react-router-dom": "^7.1.1",
    "recharts": "^2.15.1",
    "sqlite3": "^5.1.7",
    "tesseract.js": "^6.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/react-i18next": "^7.8.3",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss-loader": "^8.1.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}
